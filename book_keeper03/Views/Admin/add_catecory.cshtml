
@{
    ViewData["Title"] = "add_catecory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <section id="addcatogory">
        <div class="content-box-md">
            <div id="bg-half" class="image-fluid">
            <!-- heading of page -->
            <div id="page-heading" class="text-center">
                <h1>Add Categories</h1>
            </div>
        </div><br />
                <div class="admin-p">
                    <div class="row">
                        <div class="col-md-8 col-lg-8 col-xl-8  ">
                            <form method="post">
                                <div class="form-content">
                                    <div class="form-group">
                                        <label for="cname">Category Name </label>
                                        <input type="text" class="form-control desc-input" id="cname" placeholder="Enter your category name" name="category_name">
                                    </div>
                                    <div class="form-group">
                                        <label for="desc">Description </label>
                                        <input name="description" type="text" class="form-control desc-input" id="desc" placeholder="Enter your description">
                                    </div>
                                </div>
                                <button id="btn-admin-p" type="submit" class="btn btn-primary btn-block">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
