
@{
    ViewData["Title"] = "sign_up";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <!-- important meta tags -->
    <meta charset="utf-8"> <!-- for encoding -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> <!-- Compatible with browser -->
    <meta name="viewport" content="width=device-width, initial-scale=1 maximum-scale=1.0 ,user-scalable=no">

    <!-- title for project -->
    <title>Book Keeper</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/user/css/bootstrap/bootstrap.min.css">

    <!-- Custome CSS -->
    <link rel="stylesheet" type="text/css" href="~/user/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/user/css/responsive.css">

</head>

<body>

    <section id="bg-full">

        <div class="container">

            <div>
                <div class="text-center">
                    <img height="120" width="350"src="~/user/images/logo/white-logo.png">
                </div>
            </div>

            <div class="row justify-content-center logo-resize">
                <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 col-xs-12 col-12">
                    <div class="form_container">
                        <form method="post" asp-action="sign_up" asp-controller="Home" autocomplete="off">
                            <div class="first-line text-center">
                                <h1>Create An Account</h1>
                                <p>Enter your details to Signup</p>
                            </div>
                            <div class="form-content">
                                <div class="form-group">
                                    <label for="fname">First Name *</label>
                                    <input type="text" class="form-control" name="fname" id="fname" placeholder="Enter your first name">
                                </div>
                                <div class="form-group">
                                    <label for="lname">Last Name *</label>
                                    <input type="text" class="form-control" name="lname" id="lname" placeholder="Enter your last name">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email * @ViewBag.message</label>
                                    <input type="email" class="form-control" name="email" id="email" placeholder="Enter your email">
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="password" class="form-control close" id="password" name="password" placeholder="Enter your password">
                                    <img src="~/user/images/login/eye.png" alt="Eye-image" class="eye-image">
                                </div>
                                <button type="submit" name="submit" class="btn btn-primary btn-block">Sign Up</button>
                                <div class="link-for-registration">
                                    <p class="text-center">Already have an account?<a asp-controller="Home" asp-action="login"> Login</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </section>

    <!-- JQuery -->
    <script src="~/user/js/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/user/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    @*<script src="~/user/js/script.js" type="text/javascript"></script>*@
    <script>
        setTimeout(function() {
            $('#loader').fadeOut(500)
        }, 1000);       
        $(document).ready(function() {
                
            $('.eye-image').click(function () {

                if ($('#password').hasClass('close')) {
                    $('#password').attr('type', 'text');
                    $('#password').removeClass('close');
                } else {
                    $('#password').attr('type', 'password');
                    $('#password').addClass('close');
                }

            })
    
        })
    </Script>
</body>
</html>
