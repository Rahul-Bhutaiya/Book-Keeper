
@{
    ViewData["Title"] = "forgot_pwd";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <!-- important meta tags -->
    <meta charset="utf-8"> <!-- for encoding -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> <!-- Compatible with browser -->
    <meta name="viewport" content="width=device-width, initial-scale=1 maximum-scale=1.0 ,user-scalable=no">

    <!-- title for project -->
    <title>Notes MarketPlace</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/user/css/bootstrap/bootstrap.min.css">

    <!-- Custome CSS -->
    <link rel="stylesheet" type="text/css" href="~/user/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/user/css/responsive.css">

</head>

<body>
    <section id="bg-full">

        <div class="container">

            <div>

                <div class="text-center">
                    <img height="60" width="350" class="img-fluid" src="~/user/images/logo/white-logo.png">
                </div>

            </div>
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-6 col-md-8 col-sm-10 col-xs-12 col-12">
                    <div class="form_container">
                        <form method="post" autocomplete="off">
                            <div class="first-line text-center">
                                <h1>Forgot Password?</h1>
                                <p>Enter your email to get your password</p>
                            </div>
                            <div class="form-content">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" name="email" class="form-control" id="email" placeholder="Enter your email">
                            </div>
                                <button type="submit" class="btn btn-primary btn-block">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </section>

    <!-- JQuery -->
    <script src="~/user/js/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/user/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/user/js/script.js" type="text/javascript"></script>

</body></html>
