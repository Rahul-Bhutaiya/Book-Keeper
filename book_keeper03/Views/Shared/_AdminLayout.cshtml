
@{
    ViewData["Title"] = "_AdminLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- important meta tags -->
    <meta charset="utf-8"> <!-- for encoding -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> <!-- Compatible with browser -->
    <meta name="viewport" content="width=device-width, initial-scale=1 maximum-scale=1.0 ,user-scalable=no">

    <link rel="shortcut icon" href="~/WhatsApp Image 2022-08-30 at 5.16.41 PM.jpeg" type="image/x-icon"/>
    <!-- title for project -->
    <title>Book Keeper - Admin</title>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/user/css/bootstrap/bootstrap.min.css">
    <!-- Custome CSS -->
    <link rel="stylesheet" type="text/css" href="~/user/css/style.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/user/css/responsive.css">
    <style>
        .admin_img img
        {
            height: 35px;
            width: 35px;
            border-radius: 50%;
            object-fit: cover;
        }
        .admin_mt
        {
            margin-top: 40px;
        }
    </style>
</head>

<body>
    <div class="loader-main" id="loader">
        <img src="~/loader.gif" alt="">
    </div>
    <!--Header-->
    <header>
        <nav class="navbar fixed-top navbar-expand-lg white-nav-top white-navbar">
            <div class="container">

                <div class="navbar-header">

                    <!-- Mobile Menu Open Button -->
                    <span id="mobile-nav-open-btn">&#9776;</span>

                    <!-- Logo -->
                    <img class="img-fluid" src="~/user/images/logo/logo.png">
                </div>

                <!-- Main Menu -->
                <div class="collapse navbar-collapse justify-content-end default-header" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                               <a  class="nav-link" asp-controller="Admin" asp-action="Index" id="profile-notes"  aria-haspopup="true" aria-expanded="false"><span>Dashbord</span></a>
                        </li>
                        <li class="nav-item">
                                <a  class="nav-link" asp-controller="Admin" asp-action="add_notes" id="profile-notes"  aria-haspopup="true" aria-expanded="false"><span>Add Books</span></a>
                        </li>
                        <li class="nav-item">
                                <a  class="nav-link" asp-controller="Admin" asp-action="add_catecory" id="profile-notes"  aria-haspopup="true" aria-expanded="false"><span>Add Category</span></a>
                        </li>
                        <li class="nav-item">
                                <a  class="nav-link" asp-controller="Admin" asp-action="registered_users" id="profile-notes"  aria-haspopup="true" aria-expanded="false"><span>Registered Users</span></a>
                        </li>
                        <li class="nav-item">
                                <a  class="nav-link" asp-controller="Admin" asp-action="user_contact" id="profile-notes"  aria-haspopup="true" aria-expanded="false"><span>Want To  Contact</span></a>
                        </li>
                        <li class="nav-item">
                                <a  class="nav-link" asp-controller="Admin" asp-action="subscribers" id="profile-notes"  aria-haspopup="true" aria-expanded="false"><span>Subscribers</span></a>
                        </li>
                        <li class="nav-item">
                            @if (TempData.Peek("admin_id") == null)
                            {
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="admin_login"  class="nav-link" type="button" id="mynavbtn">Login</a>
                                </li>
                            }
                            else
                            {
                                 <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="admin_logout"  class="nav-link" type="button" id="mynavbtn">Logout</a>
                                </li>
                            }
                        </li>
                        
                    </ul>
                </div>

                <!-- Mobile Menu -->
                <div id="mobile-nav">
                    <!-- Mobile Menu Close Button -->
                    <span id="mobile-nav-close-btn">&times;</span>

                    <div id="mobile-nav-content">
                        <ul class="navbar-nav">
                            <li>
                                <a href="searchNote.html"><span>Search Notes</span></a>
                            </li>
                            <li>
                                <a href="login.html"><span>Sell Your Notes</span></a>
                            </li>

                            <li>
                                <a href="faq.html"><span>FAQ</span></a>
                            </li>

                            <li>
                                <a asp-controller="Home" asp-action="contact_us"><span>Contact Us</span></a>
                            </li>
                    

                            <li>
                                <a href="login.html" class="nav-login"><span>Login</span></a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </nav>
    </header>
    <!--Header Ends-->
    @RenderBody()
    <!--Footer Ends-->
    <!-- JQuery -->
    <script src="~/user/js/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/user/js/bootstrap/bootstrap.min.js"></script>
    <!-- Custom JS -->
    @*<script src="~/user/js/script.js" type="text/javascript"></script>*@

    <script>
        setTimeout(function() {
            $('#loader').fadeOut(500)
        }, 1000);
       
    $(window).scroll(function () {


        //showHideNav();
        if ($(window).scrollTop() > 50) {

            //Show White nav
            $(".navbar-movable").addClass("white-nav-top");

            // Show dark logo
            $(".header_logo").attr("src", "user/images/logo/white-logo.png");

        } else {

            // Hide White nav
            $(".navbar-movable").removeClass("white-nav-top");

            // Show logo
            $(".header_logo").attr("src", "user/images/logo/logo.png");

        }

    });

    
    </script>
</body></html>
