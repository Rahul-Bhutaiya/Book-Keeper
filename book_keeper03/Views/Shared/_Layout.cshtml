<!DOCTYPE html>
<html lang="en">

<head>

    <!-- important meta tags -->
    <meta charset="utf-8"> <!-- for encoding -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> <!-- Compatible with browser -->
    <meta name="viewport" content="width=device-width, initial-scale=1 maximum-scale=1.0 ,user-scalable=no">

    <link rel="shortcut icon" href="~/WhatsApp Image 2022-08-30 at 5.16.41 PM.jpeg" type="image/x-icon"/>

    <!-- title for project -->
    <title>Book Keeper</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/user/css/bootstrap/bootstrap.min.css">

    <!-- Custome CSS -->
    <link rel="stylesheet" type="text/css" href="~/user/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/user/css/responsive.css">

</head>

<body class="">
     <div class="loader-main" id="loader">
        <img src="~/loader.gif" alt="">
    </div>
    <header>

        <nav class="navbar fixed-top navbar-expand-lg white-navbar navbar-movable">
            <div class="container">

                <div class="navbar-header">

                    <!-- Mobile Menu Open Button -->
                    <span id="mobile-nav-open-btn">&#9776;</span>
                    <!-- Logo -->
                    <img class="img-fluid header_logo" src="~/user/images/logo/white-logo.png">
                </div>

                <!-- Main Menu -->
                <div class="collapse navbar-collapse justify-content-end default-header" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="paid"><span>Paid Books</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="subscribe"><span>Get Subscription</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="search_notes"><span>Free Books</span></a>
                        </li>

                        

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="contact_us"><span>Contact Us</span></a>
                        </li>
                        @if (TempData.Peek("user_id") == null)
                        {
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="login"  class="nav-link" type="button" id="mynavbtn">Login</a>
                            </li>
                        }
                        else
                        {
                             <li class="nav-item">
                                <a asp-controller="Home" asp-action="logout"  class="nav-link" type="button" id="mynavbtn">Logout</a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Mobile Menu -->
                <div id="mobile-nav">
                    <!-- Mobile Menu Close Button -->
                    <span id="mobile-nav-close-btn">&times;</span>

                    <div id="mobile-nav-content">
                        <ul class="navbar-nav">
                            <li>
                                <a href="#"><span>Search Notes</span></a>
                            </li>
                            <li>
                                <a href="#"><span>Sell Your Notes</span></a>
                            </li>
                            <li>
                                <a href="#"><span>FAQ</span></a>
                            </li>

                            <li>
                                <a href="#"><span>Contact Us</span></a>
                            </li>

                            <li>
                                <a href="login.html" class="nav-login"><span>Login</span></a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </nav>


    </header>
    @RenderBody()

    <!--Footer-->
    <footer class="border-top">
        <div class="container">
            <div class="footer-content row">
                <div class="footer-item col-md-6 col-xs-12 col-md-6 col-12">
                    <p>
                        Book Keeper All Rights Reserved By</p>
                </div>
                <div class=" footer-item col-md-6 col-xs-12 text-right">
                    <ul class="footer-social-list">
                        <li class="text-center fixed"><a href="#"><img src="~/user/images/footer/facebook.png"></a></li>
                        <li class="text-center"><a href="#"><img src="~/user/images/footer/twitter.png"></a></li>
                        <li class="text-center"><a href="#"><img src="~/user/images/footer/linkedin.png"></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <!--Footer Ends-->


    <!-- JQuery -->
    <script src="~/user/js/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/user/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    @*<script src="~/user/js/script.js" type="text/javascript"></script>*@

    <script>
        setTimeout(function() {
            $('#loader').fadeOut(500)
        }, 1000);
       
    $(window).scroll(function () {


        //showHideNav();
        if ($(window).scrollTop() > 50) {

            //Show White nav
            $(".navbar-movable").addClass("white-nav-top");

            // Show dark logo
            $(".header_logo").attr("src", "user/images/logo/logo.png");

        } else {

            // Hide White nav
            $(".navbar-movable").removeClass("white-nav-top");

            // Show logo
            $(".header_logo").attr("src", "user/images/logo/white-logo.png");

        }

    });

    
    </script>
    
</body></html>
